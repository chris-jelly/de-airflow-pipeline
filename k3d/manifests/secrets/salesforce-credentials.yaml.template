apiVersion: v1
kind: Secret
metadata:
  name: salesforce-credentials
  namespace: airflow
type: Opaque
data:
  # Base64-encoded Salesforce OAuth credentials
  # Replace these with your actual base64-encoded values
  # Example: echo -n "your-consumer-key" | base64
  consumer_key: REPLACE_WITH_BASE64_ENCODED_CONSUMER_KEY
  consumer_secret: REPLACE_WITH_BASE64_ENCODED_CONSUMER_SECRET
